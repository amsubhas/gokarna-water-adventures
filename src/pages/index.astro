        const duration = 10 * 60 * 1000;
        const now = new Date().getTime();
        let endTime = localStorage.getItem('offerEndTime');

        if (!endTime || now > parseInt(endTime)) {
            // Either first visit OR time expired in previous session.
            // Reset to 10 mins from now.
            endTime = now + duration;
            localStorage.setItem('offerEndTime', endTime);
        }

        function updateTimer() {
            const currentTime = new Date().getTime();
            const distance = parseInt(endTime) - currentTime;

            if (distance < 0) {
                // Timer expired
                clearInterval(timerInterval);
                if (timerDisplay) timerDisplay.textContent = "00:00";
                if (offerPriceElement) {
                     // Change price to 999 on expiry
                     offerPriceElement.innerHTML = 'Book Now for <span class="text-red-600">‚Çπ999/-*</span>';
