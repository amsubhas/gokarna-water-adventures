        <div class="flex flex-col">
            <span class="text-xs font-bold uppercase tracking-wider">Limited Period Offer</span>
            <div class="flex items-baseline space-x-2">
                <span class="text-lg line-through text-gray-700">1499/-</span>
                <span id="offer-price" class="text-3xl font-extrabold text-white drop-shadow-sm">799/-*</span>
            </div>
            <span class="text-xs font-medium text-white bg-red-600 px-2 py-0.5 rounded-full mt-1 w-max">Save 47% Today!</span>
        </div>
        <div class="flex flex-col items-center justify-center bg-white bg-opacity-20 p-2 rounded-lg backdrop-blur-sm">
            <span class="text-xs font-semibold text-white">Offer Ends In:</span>
            <span id="timer" class="text-xl font-mono font-bold text-white tabular-nums drop-shadow-sm">20:00</span>
        </div>
        <div class="animate-bounce bg-white p-2 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
        </div>
    </a>

    <script>
        const offerPriceElement = document.getElementById('offer-price');
        const timerDisplay = document.getElementById('timer');
        const duration = 20 * 60 * 1000;
        const now = new Date().getTime();
        let endTime = localStorage.getItem('offerEndTimeActivity');

        if (!endTime || now > parseInt(endTime)) {
            endTime = now + duration;
            localStorage.setItem('offerEndTimeActivity', endTime);
        }

        function updateTimer() {
            const currentTime = new Date().getTime();
            const distance = parseInt(endTime) - currentTime;

            if (distance < 0) {
                clearInterval(interval);
                if(timerDisplay) timerDisplay.innerHTML = "00:00";
                if(offerPriceElement) offerPriceElement.innerHTML = "999/-*";
            } else {
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                if(timerDisplay) timerDisplay.innerHTML = minutes + "m " + seconds + "s ";
            }
        }

        updateTimer();
        const interval = setInterval(updateTimer, 1000);
    </script>
</Layout>