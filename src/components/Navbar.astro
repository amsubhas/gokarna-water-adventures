<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-white/90 backdrop-blur-md shadow-sm" id="main-header"> 
    <div class="container mx-auto px-4 py-3 flex items-center justify-between"> 
        <a href="/" class="flex items-center gap-2"> 
            <img src="/images/gokarna-water-adventures-logo.jpg" alt="Gokarna Water Adventures Logo" class="h-12 w-auto rounded-full"> 
            <span class="font-bold text-xl text-blue-900 hidden sm:block">Gokarna Water Adventures</span> 
        </a> 
        <nav class="hidden md:flex items-center gap-6"> 
            <a href="/" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Home</a>
            <a href="/#activities" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Activities</a>
            <a href="/#packages" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Packages</a>
            <a href="/#gallery" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Gallery</a>
            <a href="/#reviews" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Reviews</a>
            <a href="/#about" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">About</a>
            <a href="/#contact" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Contact</a> 
            <a href="tel:9844801435" class="bg-blue-600 text-white px-5 py-2 rounded-full font-bold hover:bg-blue-700 transition-colors">Call Now</a> 
        </nav> 
        <button class="md:hidden text-gray-800 focus:outline-none" id="mobile-menu-btn" aria-label="Toggle menu"> 
            <svg xmlns="https://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"> 
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path> 
            </svg> 
        </button> 
    </div> 
    <div class="md:hidden hidden absolute top-full left-0 w-full bg-white shadow-lg border-t" id="mobile-menu"> 
        <div class="flex flex-col p-4 space-y-4"> 
            <a href="/" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">Home</a>
            <a href="/#activities" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">Activities</a>
            <a href="/#packages" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">Packages</a>
            <a href="/#gallery" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">Gallery</a>
            <a href="/#reviews" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">Reviews</a>
            <a href="/#about" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">About</a>
            <a href="/#contact" class="text-lg font-medium text-gray-800 hover:text-blue-600 block">Contact</a> 
            <a href="tel:9844801435" class="bg-blue-600 text-white text-center px-5 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors block w-full">Call Now</a> 
        </div> 
    </div> 
</header>
<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    if(btn) btn.addEventListener("click", () => { menu?.classList.toggle("hidden") });
    if(menu) menu.querySelectorAll("a").forEach(l => { l.addEventListener("click", () => { menu.classList.add("hidden") }) });
</script>